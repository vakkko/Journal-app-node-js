<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Journal</title>
    <link rel="stylesheet" href="/styles/common.css" />
    <link rel="stylesheet" href="/styles/journal.css" />
  </head>
  <body>
    <header><%- include("../partials/nav.ejs") %></header>
    <main>
      <h2>Compose</h2>
      <form
        action="http://localhost:5000/journal"
        method="post"
        class="post-container"
      >
        <label for="title">Title</label><br />
        <textarea id="title" name="title"></textarea><br />
        <label for="post">Post</label><br />
        <textarea id="post" name="post"></textarea>
        <button type="submit" class="btn-submit">Publish</button>
      </form>
    </main>
  </body>
</html>
